{
  "name": "fitness-plan-maker",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^13.5.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "prestart": "npm run tailwind:build",
    "start": "npm-run-all -p tailwind:watch start:react",
    "start:archia-debug": "npm run tailwind:build && REACT_APP_DEBUG_ARCHIA=true npm-run-all -p tailwind:watch start:react",
    "start:react": "react-scripts start",
    "prebuild": "npm run tailwind:build",
    "build": "react-scripts build",
    "pretest": "npm run tailwind:build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "tailwind:build": "tailwindcss -i ./src/index.tailwind.css -o ./src/tailwind.css --minify",
    "tailwind:watch": "tailwindcss -i ./src/index.tailwind.css -o ./src/tailwind.css --watch"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.18"
  }
}
